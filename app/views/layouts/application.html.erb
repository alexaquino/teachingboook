<!DOCTYPE html>
<html>
	<head>
	  <title>Teachingboook</title>
	  <%= stylesheet_link_tag :all %>
	  <%= javascript_include_tag :defaults %>
	  <%= csrf_meta_tag %>
	</head>
	<body>
		<div id="top_bar">
			<div id="left_part">
				<a href="/dashboard" class="top_bar">
					<img src="/images/topbar/aaa.png"/>
				</a>
			</div>
		</div>
		
		<div id="main_page">
			
			<div id="left_column">
				<% if session[:current_user]%>
					<%= render :partial => "layouts/usuario" %>
				<% end %>
			</div>
			
			<div id="main_column">
				<%= yield %>
			</div>
			
		</div>
				
		<script type="text/javascript">
			<%= yield :js %>
		</script>

	</body>
</html>
