<h1>Listing mensagens</h1>

<table>
  <tr>
    <th>Conteudo</th>
    <th>Autor</th>
    <th>Objeto Id</th>
    <th>Tipo do Objeto</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mensagens.each do |mensagem| %>
  <tr>
    <td><%= mensagem.conteudo %></td>
    <td><%= mensagem.autor.nome %></td>
    <td><%= mensagem.objeto_id %></td>
    <td><%= mensagem.objeto_type %></td>
    <td><%= link_to 'Show', mensagem %></td>
    <td><%= link_to 'Edit', edit_mensagem_path(mensagem) %></td>
    <td><%= link_to 'Destroy', mensagem, :confirm => 'Certeza que quer apagar?', :method => :delete %></td>
  </tr>
<% end %>
</table>

